extends layout

block content
    .container
        h1 Register
            form(method="POST", action="/user/register")
                #form-group
                    label Username
                    input.form-control(type="text" name="username" placeholder="输入用户名")
                .form-group
                    label Password
                    input.form-control(type="password" name="password" )
                .form-group
                    label Repeat Password
                    input.form-control(type="password" name="password2")
                .form-group
                    label Email
                    input.form-control(type="text" name="email" placeholder="输入邮箱")
                .form-group
                    label Name
                    input.form-control(type="text" name="name" placeholder="输入昵称")
                input.btn.btn-primary(type="submit" value="提交")